<Window x:Class="OODProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OODProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <TabControl TabStripPlacement="Top">

        <TabItem Header="Info">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="21*"/>
                    <ColumnDefinition Width="767*"/>
                </Grid.ColumnDefinitions>
                <ListBox x:Name="lstCompany" HorizontalAlignment="Left" Height="306" Margin="10,76,0,0" VerticalAlignment="Top" Width="193" SelectionChanged="lstCompany_SelectionChanged" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="tblkCompany" HorizontalAlignment="Left" Height="305" Margin="205.2,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
                </TextBlock>
                <Label x:Name="label" Content="Company Information" HorizontalAlignment="Left" Margin="205.4,40,0,-40" VerticalAlignment="Top" Width="217" FontWeight="Bold" FontSize="20" Grid.Column="1"/>
                <Label x:Name="label1" Content="Games" HorizontalAlignment="Left" Margin="507.4,40,0,-77" VerticalAlignment="Top" RenderTransformOrigin="0.464,0.055" Width="154" FontWeight="Bold" FontSize="20" Height="37" Grid.Column="1"/>
                <ComboBox x:Name="cbxSort" HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Margin="0,49,585,0" SelectionChanged="cbxSort_SelectionChanged" Grid.Column="1"/>
                <Label x:Name="label2" Content="Sort:" HorizontalAlignment="Left" Margin="10.2,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="51" FontSize="14" Grid.Column="1">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.061"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>

                <TextBlock x:Name="tblkClock" HorizontalAlignment="Left" Height="39" Margin="257.2,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224" FontSize="24" FontWeight="Bold" TextAlignment="Center" Grid.Column="1" Foreground="#FFDD1616"/>

                <ListBox x:Name="lstGames" HorizontalAlignment="Left" Height="305" Margin="507.2,77,0,0" VerticalAlignment="Top" Width="217" Grid.Column="1"/>
            </Grid>
        </TabItem>

        <TabItem Header="Add">
            <Grid>

            </Grid>
        </TabItem>

    </TabControl>

</Window>
